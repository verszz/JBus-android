<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddBusActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
        android:text="Tambah Bis"
        android:textColor="#000000"
        android:textSize="28dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="15dp"
        android:text="Tambah atau edit bis-mu"
        android:textColor="#000000"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/busName"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_box"
        android:hint="Nama Bis"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/capacity"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:background="@drawable/text_box"
        android:hint="Kapasitas"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <EditText
        android:id="@+id/price"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:background="@drawable/text_box"
        android:hint="Harga"
        android:inputType="text"
        android:paddingLeft="10dp" />

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="58dp"
        android:layout_marginBottom="9dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Tipe Bis"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_directions_bus_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/seat_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="58dp"
        android:layout_marginBottom="9dp"
        android:layout_gravity="center"
        android:layout_width="367dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Keberangkatan"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_home_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/departure_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_height="58dp"
        android:layout_marginBottom="9dp"
        android:layout_gravity="center"
        android:layout_width="367dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="3dp">

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Ketibaan"
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_forward_ios_24"
            app:tint="@color/black" />

        <Spinner
            android:id="@+id/arrival_dropdown"
            android:layout_width="match_parent"
            android:layout_height="48dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/subtitle2"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:text="Fasilitas"
        android:textColor="#000000"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/ac"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="AC" />

        <CheckBox
            android:id="@+id/wifi"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:text="WIFI" />

        <CheckBox
            android:id="@+id/toilet"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Toilet" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/tv"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="LCD TV" />

        <CheckBox
            android:id="@+id/coolBox"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:text="Coolbox" />

        <CheckBox
            android:id="@+id/lunch"
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Lunch" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="29dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/largeBag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="Large Baggage" />

        <CheckBox
            android:id="@+id/electricSocket"
            android:layout_width="137dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="Electric Socket" />

    </LinearLayout>

    <Button
        android:id="@+id/add_bus_button"
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Tambah"
        app:cornerRadius="20dp" />

</LinearLayout>